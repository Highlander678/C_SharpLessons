<Window x:Class="Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database" Height="300" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox" HorizontalAlignment="Stretch" Margin="5" TextWrapping="Wrap" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Grid.ColumnSpan="3"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Center" Margin="5" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="ConnectButton_Click"/>
        <Button x:Name="DisconnectButton" Content="Disconnect" Grid.Column="1" HorizontalAlignment="Center" Margin="5" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="DisconnectButton_Click" IsEnabled="False" />
        <Image Grid.Column="2" HorizontalAlignment="Center" Height="Auto" Margin="5" Grid.Row="1" VerticalAlignment="Center" Width="Auto" Source="Resources/cbs-logo-grey.png"/>
    </Grid>
</Window>
