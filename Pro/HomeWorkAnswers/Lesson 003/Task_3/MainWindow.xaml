<Window x:Class="Task_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="250" Width="350"
        Loaded="Window_Loaded">
    <Grid>
        <Button Name="Save" Content="Сохранить" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Bottom" Width="99" Height="23" Click="Save_Click"/>
        <xctk:ColorPicker Name="ClrPcker" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="99" Height="23" SelectedColorChanged="ClrPcker_SelectedColorChanged"></xctk:ColorPicker>
        <Label Name="ColorLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Top" Height="60" FontSize="14" />
    </Grid>
</Window>
